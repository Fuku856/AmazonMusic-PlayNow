<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon Music Trigger"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. キー操作を検知するためにユーザー補助設定を有効にしてください。"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ユーザー補助設定を開く"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 画面ロック中でも起動するために、「重ねて表示」を許可してください。"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重ねて表示の許可設定を開く"
            android:layout_marginBottom="24dp" />



        <!-- URIテストセクション -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 動作テスト / 回避策の検証"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="既存: amzn://music/station/mysoundtrack"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <Button
            android:id="@+id/btn_test_bgm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="標準テスト (現在の設定)"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="案1: amzn://music/prime/station/..."
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <Button
            android:id="@+id/btn_test_prime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="テスト: Prime Station"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="案2: amzn://music/shuffled-station/..."
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <Button
            android:id="@+id/btn_test_shuffled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="テスト: Shuffled Station"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="案3: amzn://music/play?type=station..."
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>
        <Button
            android:id="@+id/btn_test_play_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="テスト: Play Param"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. システム診断 (問題解決用)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_run_diagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="診断を実行 (Run Diagnostics)"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_log_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ログ出力がここに表示されます..."
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="24dp"
            android:typeface="monospace"
            android:textSize="10sp" />

    </LinearLayout>
</ScrollView>
