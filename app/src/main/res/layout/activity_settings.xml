<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="権限設定"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- 1. Accessibility -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ユーザー補助設定"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="イヤホン操作（キーイベント）を検知するために必要です。"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/btn_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ユーザー補助を開く"
            android:layout_marginBottom="24dp" />

        <!-- 2. Overlay -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 他のアプリの上に重ねて表示"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="画面ロック中やバックグラウンドからAmazon Musicを起動するために必要です。"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/btn_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="設定を開く"
            android:layout_marginBottom="24dp" />

        <!-- 3. Battery Optimization -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. バッテリー最適化"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="バックグラウンドで安定して動作するために「制限なし」に設定してください。"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />
        
        <!-- Status Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在の状態: " />
            <TextView
                android:id="@+id/tv_battery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確認中..."
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_battery_optimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最適化を解除する"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
